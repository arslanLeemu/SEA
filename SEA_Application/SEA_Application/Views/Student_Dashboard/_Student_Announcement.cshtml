@model IEnumerable<SEA_Application.Models.AspNetAnnouncement_Subject>



<script src="~/Scripts/jquery-1.10.2.js"></script>
<script type="text/javascript">

    $(document).ready(function () {
        $("#SubjectID").click(function () {
            var selectedSubject = $("#SubjectID").val();
            $.get('@Url.Action("AnnouncementBySubject")',
                { subjectID: selectedSubject }, function (data) {
                    $('#announcement_table').html(' ');
                    $.each(data, function (i, item)
                    {
                        $('#announcement_table').append('<tr><td>' + item.Title + '</td><td>' + item.SubjectName + '</td><td><a href="/Student_Dashboard/AnnouncementDetail?id='+item.Id+'">Detail</a></td></tr>');
                    });
                });
        });
    });
</script>

<div class="container">
    <div class="row">
        <div class="form-horizontal">
            <div class="form-group">
                <lable class="col-md-3 control-label"><b>Select Subject</b></lable>
                <div class="col-md-8">
                    @Html.DropDownList("SubjectID", null, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="row">
       
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Title
                    </th>
                    <th>
                        Subject
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="announcement_table"></tbody>
        </table>
    </div>
</div>

