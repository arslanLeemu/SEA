
@model IEnumerable<SEA_Application.Models.AspNetAnnouncement_Subject>
<script type="text/javascript">
    $(document).ready(function () {
        $("#ClassID").click(function () {
            var selectedClass = $("#ClassID").val();
            $.get('@Url.Action("ChallanByClass")',
                { id: selectedClass }, function (data) {
                    $('#challan_table').html(' ');
                    $.each(data, function (i, item) {
                        $('#challan_table').append('<tr><td>' + item.ClassName + '</td><td>' + item.TypeName + '</td><td>' + item.StartDate + '</td>><td>' + item.EndDate + '</td>><td>' + item.TotalAmount + '</td>><td>' + item.DueDate + '</td><td></td><td><a href="/AspNetFeeChallan/Edit?id=' + item.Id + '">Edit</a>|<a href="/AspNetFeeChallan/Details?id=' + item.Id + '">Detail</a>|<a href="/AspNetFeeChallan/Delete?id=' + item.Id + '">Delete</a></td></tr>');
                    });

                });
        });
        
    });
</script>
<p>
    @Html.ActionLink("New Challan", "Create", "AspNetFeeChallan")
</p>
<div class="container">
    <div class="row">
        <div class="form-horizontal">
            <div class="col-md-8">
                <div class="form-group">
                    <lable class="col-md-3 control-label"><b>Select Subject</b></lable>
                    <div class="col-md-8">
                        @Html.DropDownList("ClassID", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>

            </div>
        </div>
    </div>
    <hr />
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    Class
                </th>
                <th>
                   Duration Type
                </th>
                <th>
                    Start Date
                </th>
                <th>
                   End Date
                </th>
                <th>
                    Amount
                </th>
                <th>
                    Due Date
                </th>
                <th>
                    View
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody id="challan_table"></tbody>
    </table>
</div>
