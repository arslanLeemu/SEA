@model SEA_Application.Models.AspNetDurationType

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>AspNetDurationType</h4>
        <hr />
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.TypeName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
               @Html.DropDownListFor(x => x.TypeName,new List<SelectListItem>
    {
                        new SelectListItem() {Text = "Monthly", Value="Monthly"},
                        new SelectListItem() {Text = "Quarterly", Value="Quarterly"},
                        new SelectListItem() {Text = "6 Months", Value="6 Months"},
                        new SelectListItem() {Text = "Yearly", Value="Yearly"}
    }, htmlAttributes: new { @class = "form-control" }) 
                @Html.ValidationMessageFor(model => model.TypeName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
